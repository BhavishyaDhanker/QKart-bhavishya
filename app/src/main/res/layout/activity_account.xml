<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F8F9FA"
    android:id="@+id/main"
    tools:context=".AccountActivity">

    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#800000"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_person_24"
            app:tint="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvAccountRoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No: 123456"
            android:textColor="#E0E0E0"
            android:textSize="14sp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/profileHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">



            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <TextView
                android:id="@+id/btnAccountHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:drawableStart="@drawable/shopping_cart_16_dp"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

            <TextView
                android:id="@+id/btnAccountLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#D32F2F"
                android:drawableStart="@drawable/outline_exit_24"
                android:drawableTint="#D32F2F"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/maroon"
        android:elevation="20dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/cartContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            >



            <ImageView
                android:id="@+id/btnCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cart_24"
                app:tint="@android:color/white"/>

            <View
                android:id="@+id/cartBadgeDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="top|end"
                android:background="@drawable/bg_red_dot"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/home"
            app:tint="@color/off_white"
            android:src="@drawable/home_12_dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/OrderHistory"
            app:tint="@color/off_white"
            android:src="@drawable/shopping_cart_16_dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/settings"
            app:tint="@color/off_white"
            android:src="@drawable/settings_16_dp"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>