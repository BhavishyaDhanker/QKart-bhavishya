<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/off_white"
    android:orientation="vertical"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".LiveOrdersAdminActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/off_white"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/maroon">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="       Canteen Admin Panel"
        android:background="@color/maroon"
        android:padding="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/off_white"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textSize="26dp"/>

                <ImageView
                    android:id="@+id/btnClearHistory"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_delete_24"
                    app:tint="@color/off_white"
                    android:contentDescription="Clear Completed Orders" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LIVE ORDERS"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/maroon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MANAGE MENU"
                    android:padding="10dp"
                    android:gravity="center"
                    android:id="@+id/btnManageMenu"
                    android:background="@color/maroon"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/off_white"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rvorders"/>


</LinearLayout>